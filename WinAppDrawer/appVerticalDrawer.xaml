<UserControl x:Class="appVerticalDrawer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinAppDrawer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="128">
    <Grid>
        <Grid x:Name="appVerticalGrid" Margin="0,10,0,29">
            <StackPanel x:Name="appStackPanel" Margin="0,0,0,10"/>
        </Grid>
        <TextBox x:Name="appDrawerName" Height="29" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Bottom" FontSize="18" TextAlignment="Center" HorizontalAlignment="Left" Width="101"/>
        <Button x:Name="addAppBut" Content="+" HorizontalAlignment="Right" Height="29" VerticalAlignment="Bottom" Width="27"/>

    </Grid>
</UserControl>
